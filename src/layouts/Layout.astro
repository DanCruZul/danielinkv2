---
import Noise from "@/components/ui/noise.astro";
import Darknoise from "@/components/ui/darknoise.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Desarrollador frontend y diseñador web espacializado en ofrecer una experiencia digital impactante y atractiva con el objetivo de hacer que destaquen en el mundo digital
      con un impacto poderoso."
    />
    <meta name="og:title" content={title} />
    <meta
      name="og:description"
      content="Desarrollador frontend y diseñador web espacializado en ofrecer una experiencia digital impactante y atractiva con el objetivo de hacer que destaquen en el mundo digital
    con un impacto poderoso."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary text-secondary">
    <Noise />
    <!-- <Darknoise /> -->
    <slot />
  </body>
</html>
<style is:global>
  html {
    scrollbar-color: #0d0d0c #cfcfc5;
    scroll-behavior: smooth;
  }

  h1 {
    font-size: 2.8rem;
    font-weight: 700;
    line-height: 100%;
  }

  h2 {
    font-size: 48px;
    font-weight: 700;
    line-height: 100%;
  }

  h3 {
    font-size: 28px;
    font-weight: 700;
    line-height: 100%;
  }

  h4 {
    font-size: 28px;
    font-weight: 700;
    line-height: 100%;
  }

  p {
    line-height: 140%;
    font-weight: 400;
  }

  .container {
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    margin-left: auto;
    margin-right: auto;
  }

  .section {
    margin-bottom: 80px;
  }

  /* xs */
  @media (min-width: 324px) {
    h1 {
      font-size: 3.5rem;
    }
  }

  /* sm */
  @media (min-width: 640px) {
  }

  /* md */
  @media (min-width: 768px) {
    .section {
      margin-bottom: 80px;
    }

    h1 {
      font-size: 80px;
    }

    h2 {
      font-size: 60px;
    }

    h3 {
      font-size: 40px;
    }

    h4 {
      font-size: 40px;
    }
  }

  /* lg */
  @media (min-width: 1024px) {
    h1 {
      font-size: 98px;
    }

    h2 {
      font-size: 80px;
    }

    h3 {
      font-size: 68px;
    }

    h4 {
      font-size: 52px;
    }
  }

  /* xl */
  @media (min-width: 1280px) {
    .section {
      margin-bottom: 160px;
    }

    h1 {
      font-size: 98px;
    }
  }

  /* 2xl */
  @media (min-width: 1736px) {
    h1 {
      font-size: 108px;
    }
  }
</style>
